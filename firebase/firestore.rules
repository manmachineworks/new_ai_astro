rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isParticipant(astrologerId, userId) {
      return request.auth != null && (request.auth.uid == astrologerId || request.auth.uid == userId);
    }

    match /chats/{chatId} {
      allow read, write: if isParticipant(resource.data.participants.astrologer_id, resource.data.participants.user_id);

      match /messages/{messageId} {
        allow read: if isParticipant(resource.data.participants.astrologer_id, resource.data.participants.user_id);
        allow create: if request.auth != null && isParticipant(resource.parent.data.participants.astrologer_id, resource.parent.data.participants.user_id);
        allow update, delete: if false;
      }
    }

    match /presence/astrologers/{astrologerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == astrologerId;
    }
  }
}
